@page
@model DisasterAlleviationFoundation.Pages.AdminDashboard.AdminVolunteerActivityModel
<head>
    <link rel="stylesheet" href="/css/StyleSheet.css" asp-append-version="true" />
</head>
<style>

    .tables {
        margin-top: 2rem;
        width: 100%;
        height: 100%;
        margin-bottom: 2rem;
    }

</style>
<div class="top-headers">

    <h1>View Volunteer Activity</h1>
    <h6 class="form-text">View volunteer activity for tasks and schedules</h6>

</div>

<div class="tables">

    <h6 class="form-text">Volunteer Tasks </h6>

    <table id="table">

        <thead>

            <tr>

                <th>Task ID</th>
                <th>Task Name</th>
                <th>Description</th>
                <th>Area</th>
                <th>Status</th>
                <th>Assigned</th>

            </tr>

        </thead>

        <tbody>

            @for (int i = 0; i < Model.taskID.Count; i++)
            {
                <tr>

                    <td>@Model.taskID[i]</td>
                    <td>@Model.taskName[i]</td>
                    <td>@Model.description[i]</td>
                    <td>@Model.areaName[i]</td>
                    <td>@Model.taskStatus[i]</td>
                    <td>@Model.taskEmail[i]</td>

                </tr>
            }
            

        </tbody>

    </table>

</div>
<div class="tables">

    <h6 class="form-text"> Volunteer Schedules </h6>

    <table id="table">

        <thead>

            <tr>

                <th>Schedule ID</th>
                <th>Schedule Area</th>
                <th>Time </th>
                <th>Date</th>
                <th>Status</th>
                <th>Assigned</th>

            </tr>
            
        </thead>

        <tbody>

            @for (int j = 0; j < Model.scheduleID.Count; j++)
            {
                <tr>

                    <td>@Model.scheduleID[j]</td>
                    <td>@Model.scheduleArea[j]</td>
                    <td>@Model.scheduleTime[j]</td>
                    <th>@Model.scheduleDate[j]</th>
                    <td>@Model.scheduleStatus[j]</td>
                    <td>@Model.scheduleEmail[j]</td>

                </tr>
            }
            

        </tbody>

    </table>

</div>