@page
@model DisasterAlleviationFoundation.Pages.VolunteerDashboard.VolunteerTaskModel
<head>
    <link rel="stylesheet" href="/css/StyleSheet.css" asp-append-version="true" />
</head>
<style>

    .top-headers {
        margin-top: 1rem;
    }

    .tables {
        margin-top: 2rem;
        width: 100%;
        height: 100%;
        margin-bottom: 2rem;
    }

</style>
<div class="top-headers">

    <h1>Task</h1>
    <h6 class="form-text">View tasks assigned by administration</h6>

</div>

<div class="tables">

    <h6 class="form-text">My Tasks</h6>

    <table id="table">

        <thead>

            <tr>

                <th>Task Name</th>
                <th>Description</th>
                <th>Area Name</th>
                <th>Status</th>

            </tr>

        </thead>

        <tbody>

            @for(int i = 0; i < Model.taskName.Count; i++)
            {
                <tr>
                    <td>@Model.taskName[i]</td>
                    <td>@Model.description[i]</td>
                    <td>@Model.areaName[i]</td>
                    <td>@Model.status[i]</td>

                </tr>
            }
           

        </tbody>
    </table>

</div>
